@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav ">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink3" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Привет @User.Identity.GetUserName()!
                </a>
                <div class="dropdown-menu bg-dark" aria-labelledby="navbarDropdownMenuLink3">
                    <a class="dropdown-item"> @Html.ActionLink("Личный кабинет", "ShowArea", "Home", new { id = User.Identity.GetUserId() }, new { @class = "nav-link" })</a>
                    @*<a class="dropdown-item">
                        @Html.ActionLink("Оставить отзыв", "Comments",
                                 "Client", new {id = User.Identity.GetUserId()},
                                 new {@class = "nav-link"})
                    </a>*@
                </div>
            </li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()"><span class="nav-link">Выход</span></a></li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav ">
        <li>@Html.ActionLink("Регистрация", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink", @class = "nav-link" })</li>
        <li>@Html.ActionLink("Вход", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "nav-link" })</li>
    </ul>
}
