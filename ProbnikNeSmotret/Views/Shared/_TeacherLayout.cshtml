<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar fixed-top bg-dark navbar-expand-lg navbar-dark">
        <div class="container">
            <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarSupportedContent">
                <span class="navbar-toggler-icon"></span>
            </button>
            @Html.ActionLink("Наш книжный", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })

            <div class="navbar-collapse collapse" id="navbarSupportedContent">
                <ul class="nav navbar-nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Управление товарами
                        </a>
                        <div class="dropdown-menu bg-dark" aria-labelledby="navbarDropdownMenuLink">
                            <a class="dropdown-item">@Html.ActionLink("Создание новой книги", "Create", "Book", null, new { @class = "nav-link" })</a>
                            <a class="dropdown-item">@Html.ActionLink("Создание новой категории", "AddCategory", "Book", null, new { @class = "nav-link" })</a>
                            <a class="dropdown-item"> @Html.ActionLink("Список книг", "Index", "Book", null, new { @class = "nav-link" })</a>
                            <a class="dropdown-item"> @Html.ActionLink("Остатки", "GetSmallNumberBooks", "Book", null, new { @class = "nav-link" })</a>
                        </div>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Заказы и статистика
                        </a>
                        <div class="dropdown-menu bg-dark" aria-labelledby="navbarDropdownMenuLink2">
                            <a class="dropdown-item">@Html.ActionLink("Лучшие продажи", "BestsellerList", "Manager", null, new { @class = "nav-link" })</a>
                            <a class="dropdown-item"> @Html.ActionLink("Заказы", "OrdersList", "Manager", null, new { @class = "nav-link" })</a>
                            <a class="dropdown-item"> @Html.ActionLink("Продажи по категориям", "GenreList", "Manager", null, new { @class = "nav-link" })</a>
                        </div>
                    </li>
                </ul>

                @Html.Partial("_LoginPartial")

            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My BookShop</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
